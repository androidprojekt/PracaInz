<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LocalizationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#283c86">

        <LinearLayout
            android:id="@+id/layoutToolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#2c3e50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageNavigationMenu"
                android:src="@drawable/ic_menu"
                app:tint="#fff" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Rozwiń menu"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="230dp"
            android:layout_height="372dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/mapka_nowa">

            <ImageView
                android:id="@+id/markerId"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:contentDescription="Map of hall"
                android:rotation="90"
                app:srcCompat="@drawable/marker_map_third" />

            <ImageView
                android:id="@+id/imgAmnimation1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="77dp"
                android:src="@drawable/circle"
                android:layout_marginStart="55dp" />
            <ImageView
                android:id="@+id/circleOfMarkerId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="317dp"
                android:visibility="invisible"
                android:src="@drawable/user_location_circle"
                android:layout_marginStart="175dp" />
            <ImageButton
                android:id="@+id/exhibit1BtnId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="77dp"
                android:onClick="showExhibitPopUp"
                app:srcCompat="@drawable/exhibit_second_edit"
                android:layout_marginStart="55dp" />
            <ImageView
                android:id="@+id/imgAmnimation2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="237dp"
                android:src="@drawable/circle"
                android:layout_marginStart="95dp" />
            <ImageButton
                android:id="@+id/exhibit2BtnId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="237dp"
                android:onClick="showExhibitPopUp"
                app:srcCompat="@drawable/exhibit_first_edit"
                android:layout_marginStart="95dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="450dp"
            android:background="#283c86">

            <Button
                android:id="@+id/startLocalizationBtnId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:layout_marginTop="120dp"
                android:text="start"
                android:textStyle="bold"
                android:background="@drawable/round_btn_white"
                android:layout_marginStart="20dp" />
            <Button
                android:id="@+id/showUserLocationBtnId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="120dp"
                android:text="Znajdź mnie"
                android:textStyle="bold"
                android:layout_marginLeft="190dp"
                android:background="@drawable/round_btn_white"
                android:layout_marginStart="190dp" />
            <TextView
                android:id="@+id/estimateOfXId"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Estimate X: "
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/estimateOfYId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:textColor="#fff"
                android:text="Estimate Y: "
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/numberOfNeighbours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="Neighbours: " />

            <TextView
                android:id="@+id/directionCompassId"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Direction: "
                android:textColor="#fff" />

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/layout_navigation_header"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>

