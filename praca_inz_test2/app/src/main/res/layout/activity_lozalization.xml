<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LozalizationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutToolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#2c3e50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageNavigationMenu"
                android:src="@drawable/ic_menu"
                app:tint="#fff" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="RozwiÅ„ menu"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="312dp"
            android:layout_height="324dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/room_grid">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:rotation="90"
                app:srcCompat="@drawable/abc_vector_test" />

            <ImageView
                android:id="@+id/imgAmnimation1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="165dp"
                android:visibility="invisible"
                android:layout_marginTop="125dp"
                android:src="@drawable/circle"
                />

            <ImageButton
                android:id="@+id/exhibit1BtnId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="165dp"
                android:onClick="showExhibitPopUp"
                android:layout_marginTop="125dp"
                app:srcCompat="@android:drawable/btn_star" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="450dp">

            <Button
                android:id="@+id/startLocalizationBtnId"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="start localization" />

            <TextView
                android:id="@+id/estimateOfXId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Estimate X: " />

            <TextView
                android:id="@+id/estimateOfYId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="Estimate Y: " />

            <TextView
                android:id="@+id/numberOfNeighbours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:text="Neighbours: " />

            <TextView
                android:id="@+id/directionCompassId"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Direction: " />

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/layout_navigation_header"
        android:layout_gravity="start"
        />
</androidx.drawerlayout.widget.DrawerLayout>

