<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationsFragment">

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="5dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="7dp"
                  android:text="@string/jak_dziala"
                  android:textColor="#000"
                  android:textStyle="bold"
                  android:textSize="30sp">
              </TextView>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/Wykorzystanie_czujnikow"
                  android:textColor="#000"
                  android:textSize="18sp"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="7dp"
                  >
              </TextView>
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="15dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/funkcje"
                  android:textSize="18sp"
                  android:layout_margin="7dp">
              </TextView>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/podejcie"
                  android:textSize="18sp"
                  android:layout_margin="7dp">
              </TextView>

              <ImageView
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:src="@drawable/podejdz_image_info"
                  android:layout_gravity="center"/>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/klikniecie"
                  android:textSize="18sp"
                  android:layout_marginTop="15dp"
                  android:layout_margin="5dp">
              </TextView>

              <ImageView
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:src="@drawable/click_image_info"
                  android:layout_gravity="center"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/wyraz_opinie"
                  android:textSize="18sp"
                  android:layout_margin="7dp">
              </TextView>

              <ImageView
                  android:layout_width="110dp"
                  android:layout_height="110dp"
                  android:src="@drawable/ocena_image_info"
                  android:layout_gravity="center"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/znajdz_mnie"
                  android:textSize="18sp"
                  android:layout_marginTop="15dp"
                  android:layout_margin="7dp">
              </TextView>

              <ImageView
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:src="@drawable/location_icon_info"
                  android:layout_gravity="center"/>

          </LinearLayout>

      </LinearLayout>



  </androidx.core.widget.NestedScrollView>

</FrameLayout>